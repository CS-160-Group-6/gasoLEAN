    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app/main.py",
            "args": [
                "-m"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "Delete __pycache__ folders"
        },
        {
            "name": "Python: Run Program",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app/main.py",
            "args": [
                "-m"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "Delete __pycache__ folders"
        }
    ]
}